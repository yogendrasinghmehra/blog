@model List<blogs.Areas.Admin.Models.Blog>
@{
    ViewBag.Title = "Home";
}

<link href="~/Content/page_styles/index.css" rel="stylesheet" />

<div class="dv_main">
   
        @{
            if (Model.Count > 0)
            {
                foreach (var blog in Model)
                {

                    <div class="dv_blog">
                        <div class="dv_head">
                            <h3>@blog.BlogTitle </h3>

                            @Html.ActionLink("View Blog...", "Blog", "Home", new { id = blog.BlogId }, new { @class = "rd_more" })
                        </div>
                        <small class="date_publish">@blog.CreatedDate</small>
                        <hr />
                    </div>
                }
            }
            else
            {
                <strong class="text-center"> No Record found...</strong>
            }
        }




   
    
</div>