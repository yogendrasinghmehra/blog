@model List<blogs.Areas.Admin.Models.Blog>
@{
    ViewBag.Title = "Home";
}

<link href="~/Content/page_styles/index.css" rel="stylesheet" />



    <div class="row">


        <div class="sub-title">
            <h2>Recent Blogs</h2>
            <a href="#"><i class="icon-envelope"></i></a>
        </div>


        <div class="col-md-12 content-page">

@{
    if (Model.Count > 0)
    {
        foreach (var blog in Model)
        {
             <!-- Blog Post Start -->
            <div class="col-md-12 blog-post">
                <div class="post-title">
                   
                    <h2><a href="@Url.Action("Blog", "Home", new {id=blog.BlogId })">@blog.BlogTitle</a></h2>
                   
                </div>
                <div class="post-info">
                   
                    <span>@String.Format("{0:f}", @blog.CreatedDate)</span>
                </div>
                <div class="blog_content">
                    @Html.Raw(blog.BlogDescription)
                </div>
                
                @Html.ActionLink("View Full Blog", "Blog", "Home", new { id = blog.BlogId }, new { @class = "button button-style button-anim fa fa-long-arrow-right" })
            </div>
            <!-- Blog Post End -->
        }
    }
}


           
          


            

        </div>

    </div>



  



