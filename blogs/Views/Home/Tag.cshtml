@model List<blogs.Areas.Admin.Models.Blog>
@{
    ViewBag.Title = "Subject";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/page_styles/subject.css" rel="stylesheet" />


     <div class="row">


    <div class="sub-title">
        <h2>All "@ViewBag.TagName" Blogs</h2>
        <a href="contact.html"><i class="icon-envelope"></i></a>
    </div>


    <div class="col-md-12 content-page">

        @{
            if (Model.Count > 0)
            {
                foreach (var blog in Model)
                {
             <!-- Blog Post Start -->
                    <div class="col-md-12 blog-post">
                        <div class="post-title">
                            <a href="single.html"><h1>@blog.BlogTitle</h1></a>
                        </div>
                        <div class="post-info">
                            <span>@blog.CreatedDate</span>
                        </div>
                        <div class="blog_content">
                            @Html.Raw(blog.BlogDescription)
                        </div>

                        @Html.ActionLink("View Full Blog", "Blog", "Home", new { id = blog.BlogId }, new { @class = "button button-style button-anim fa fa-long-arrow-right" })
                    </div>
            <!-- Blog Post End -->
                }
            }
            else {<strong class="text-center">No blog found !</strong> }
        }






        

    </div>

</div>
        
        
   