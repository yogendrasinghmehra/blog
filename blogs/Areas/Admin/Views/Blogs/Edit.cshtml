@model blogs.Areas.Admin.Models.Blog

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Blog</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BlogId)

        @Html.LabelFor(model => model.TagId, "TagId", htmlAttributes: new { @class = "control-label" })

        <div class="form-group">
           
            <div class="col-md-10">
                @Html.DropDownList("TagId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TagId, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.LabelFor(model => model.BlogTitle, htmlAttributes: new { @class = "control-label" })
        <div class="form-group">
          
            <div class="col-md-10">
                @Html.EditorFor(model => model.BlogTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BlogTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.LabelFor(model => model.BlogDescription, htmlAttributes: new { @class = "control-label" })

        <div class="form-group">
          
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.BlogDescription, new { @class = "form-control editorHtml", @rows = "10" })
                @Html.ValidationMessageFor(model => model.BlogDescription, "", new { @class = "text-danger" })
            </div>
        </div>

       
        
        <div class="form-group">
           
         Enabled <input type="checkbox" checked="@Model.Status" />
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script src="~/Scripts/tinymce/tinymce.min.js"></script>
<script>

    $(function () {
        tinymce.init({
            selector: "#BlogDescription"
        });

    })
</script>






}
